{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "CommonJS",
    "composite": true, // Required for project references
    "emitDeclarationOnly": true, // Emits only .d.ts files if you don't need compiled JS
    "outDir": "./dist", // Specify output directory
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts"
  ]
}